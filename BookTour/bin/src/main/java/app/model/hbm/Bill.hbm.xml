<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
    <class name="Bill" table="bill" catalog="db_bookingtour" optimistic-lock="version">
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="fullName" type="string">
            <column name="fullName" length="225" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="225" not-null="true" />
        </property>
        <property name="phoneNumber" type="string">
            <column name="phoneNumber" length="20" not-null="true" />
        </property>
        <property name="time" type="date">
            <column name="time" length="10" />
        </property>
        <property name="totailMoney" type="string">
            <column name="totailMoney" length="225" />
        </property>
        <list name="typepaymentses" table="typepayments" inverse="true"  fetch="select">
             <key column="bill_id" />
             <list-index column="id" />
            <one-to-many class="Typepayment" />
        </list>
        <list name="booktourses" table="booktours" inverse="true"  fetch="select">
              <key column="bill_id" />
             <list-index column="id" />           
            <one-to-many class="Booktour" />
        </list>
    </class>
</hibernate-mapping>
