<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
    <class name="Place" table="places" catalog="db_bookingtour" optimistic-lock="version">
        <id name="id" type="int">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <many-to-one name="city" class="City" fetch="select">
            <column name="cityId" not-null="true" />
        </many-to-one>
        <property name="name" type="string">
            <column name="name" length="225" not-null="true" />
        </property>
        <list name="toursplaceses" table="toursplaces" inverse="true"  fetch="select">
            <key>
                <column name="places_id" not-null="true" />
            </key>
            <list-index column="id" />  
            <one-to-many class="Toursplace" />
        </list>
        <list name="placeimages" table="placeimage" inverse="true"  fetch="select">
            <key>
                <column name="places_id" not-null="true" />
            </key>
             <list-index column="id" />  
            <one-to-many class="Placeimage" />
        </list>
    </class>
</hibernate-mapping>
